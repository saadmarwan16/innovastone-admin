{
  "kind": "collectionType",
  "collectionName": "collections",
  "info": {
    "singularName": "collection",
    "pluralName": "collections",
    "displayName": "Collection",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "unique": true
    },
    "subtitle": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "description": {
      "type": "text",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "minLength": 25
    },
    "hero_image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ],
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images"
      ],
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "is_new": {
      "type": "boolean",
      "default": true,
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "popularity": {
      "type": "integer",
      "required": true,
      "min": 0,
      "max": 100
    },
    "luxury_score": {
      "type": "integer",
      "required": true,
      "min": 0,
      "max": 100,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "similar": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::collection.collection"
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    },
    "price_range": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::price-range.price-range"
    },
    "colors": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::color.color"
    },
    "uses": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::use.use"
    },
    "features": {
      "type": "component",
      "repeatable": true,
      "component": "categories.features"
    },
    "slug": {
      "type": "string",
      "unique": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    }
  }
}
